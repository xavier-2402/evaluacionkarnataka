package rest.db;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class Conexion {
	private String host= "192.168.43.173";
	private int port = 1521;
	private String user = "";
	private String pwd = "";
	private String database = "";
    public static Connection connect(String host, int port, String user, String pwd, String database){
		String connectionUrl="jdbc:oracle:thin:@"+host+":"+port
				+"/"+database;
		Connection con = null;
		
		try {
			con=DriverManager.getConnection(connectionUrl,user,pwd);
    
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return con;
	}
    
}
